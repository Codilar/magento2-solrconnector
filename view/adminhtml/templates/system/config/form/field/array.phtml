    require(['jquery', 'Codilar_Wheelsdeals/js/jsColor.min'], function($) {
        $(document).ready(function() {
            setTimeout(function() {
                window.jscolor.installByClassName("jscolor");
            }, 1000);
        });

        $(document).on('click', 'button.action-add', function () {
            window.jscolor.installByClassName("jscolor");
        });
